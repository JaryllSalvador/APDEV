<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Profile</title>
    <link rel="stylesheet" type="text/css" href="profileedit.css">
</head>
<body>


<div class="container">
    <div class="profile-header">
        <div class="button-container">
            <button class="button" onclick="window.location.href='homepage';">Return to Home</button>
            <button class="button" onclick="window.location.href='/';">Logout</button>
        </div>
        <div class="logo-container">
            <img src="images/logo.png" alt="" class="logo">comluv.
        </div>
        <div class="profile-container">
            <img class="profile-img" src="{{profile_picture}}" alt="Profile Picture">
        </div>
        <button class="edit-button" onclick="">Edit Avatar </button>
        <div class="handle">
            {{#if admin_access}}
                <div>ADMIN ACCESS</div>
            {{else}}
                <div>STUDENT ACCESS</div>
        {{/if}}

        </div>
    </div>

    <div class="profile-info">
        <div class="name-container">
            <h2 class="name">{{firstname}} {{lastname}}</h2>
            <button class="edit-button" onclick="window.location.href='profile';">Save</button>
        </div>
        <p class="description">Username: {{account_name}}</p>
        <p class="description">Email: {{profile_email}}</p>
    </div>

    <!-- Reservation Section Here -->
</div>

<div class="delete-account">
    <button class="delete-button" onclick="deleteAccount()">Delete Account</button>
</div>
</body>
</html>
