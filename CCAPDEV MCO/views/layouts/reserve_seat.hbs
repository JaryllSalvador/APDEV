<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reserve</title>

    <!-- BOOTSTRAP HERE -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <link rel="stylesheet" type="text/css" href="./reserve_seat.css">
</head>
<body>
    <!-- ======= Header Section ======= -->
    <div class="header-item">
        <nav class="navbar navbar-expand-sm navbar-dark shadow">
            <div class="container">
                <div class="mr-auto logo">
                    <img class="logo-img" src="images/logo.png" alt="">
                    <a class="navbar-brand logo-text" href="homepage.html">comluv.</a>
                </div>

                <div class="items">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="homepage.html">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="reserve_seat.html">Reserve</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="homepage.html#about">About</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Profile
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="profile.html">View Profile</a>
                                <a class="dropdown-item" href="index.html">Log Out</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="body-container">
        {{!-- <div id="reserve-screen" class="reserve-screen bounded-box"> --}}

        {{#each room_info}}
            <div class="body-container">
                <div id="{{room-id}}-{{time-slot}}" class="reserve-screen bounded-box">
                    {{#each seats}}
                    <div class="row" id="row-{{@index}}">
                        {{#each this}}
                        <div class="table" id="table-{{@index}}">
                            {{#each this}}
                            <div class="seat" id="{{seat-id}}" data-name="{{occupant}}" data-order="{{seat-order}}">
                                {{!-- Seat ID: {{seat-id}}, zOrder: {{seat-order}}, Occupant: {{occupant}} --}}
                            </div>
                            {{/each}}
                        </div>
                        {{/each}}
                    </div>
                    {{/each}}
                    <span class="front">front</span>
                </div>
            </div>
        {{/each}}

        {{!-- </div> --}}
        <div class="details-section">
            <h1>Create Reservation</h1>
                <div class="time-slot select-wrapper">
                    <p>Classroom: </p>
                    <select name="Time Slots" id="time-slots" class="select-wrapper">
                        <option value="101">G101</option>
                        <option value="102">G102</option>
                        <option value="103">G103</option>
                    </select>
                </div>
                <div class="time-slot select-wrapper">
                    <p>Time Slot:</p>
                    <select name="Time Slots" id="time-slots" class="select-wrapper">
                        <option value="915"> 09:15-10:45</option>
                        <option value="1100">11:00-12:30</option>
                        <option value="1245">12:45-14:15</option>
                        <option value="230"> 14:30-06:00</option>
                    </select>
                </div>
            <p id="seat-number">No seat selected.</p>
            <button id="reserve" class="button">Reserve</button>
        </div>
    </div>
    <!-- FOOTER HERE -->
    <div class="footer-container">
        <span>&copy; Copyright Group 17 - Team #GHEE. All Rights Reserved.</span>
    </div>

    <script src="scripts/reserve_seat.js"></script>
</body>
</html>